@{
    ViewBag.Title = "Home Page";
}

<form method="post">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-4">
            <div class="row">
                <h3>Inicio de Sesión</h3>
            </div>
            <br />
            <div class="row">
                @Html.TextBox("usuarioLogin", "", new { placeholder = "Nombre Usuario", @class = "form-control" })
            </div>
            <br />
            <div class="row">
                @Html.Password("contraseñaLogin", "", new { placeholder = "Contraseña", @class = "form-control" })
            </div>
            <br />
            <div class="row">
                <input type="submit" value="Ingresar" class="btn btn-block btn-success" />
            </div>
            <div class="row">
                <h5>¿No tienes Cuenta?  @Html.ActionLink("Registrate", "Create", "Usuario")</h5>
            </div>  
        </div>
    </div>
</form>